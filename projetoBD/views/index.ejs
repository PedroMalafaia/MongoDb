<body id="body">
    
    <nav><div class="d-flex justify-content-center"><h1>Registro de novos côndominos</h1><br></div>
        <div class="d-flex justify-content-center">
    <form action="/show" method="POST">
        <div class="form-group">
            Nome e sobrenome: <input type="text" placeholder="Nome" name="name">
            <input type="text" placeholder="sobrenome" name="surname"></br></br>
            Celular: <input type="text" style="margin-left: 85px;" placeholder="Celular" name="celular"></br></br>
            CPF: <input type="text" style="margin-left: 105px;" placeholder="CPF" name="cpf"></br></br>
            RG: <input type="text"  style="margin-left: 110px;"placeholder="RG" name="rg"></br></br>
            E-mail: <input type="email"  style="margin-left: 85px;"placeholder="E-mail" name="email"></br></br>
            Complemento: <input type="text"  style="margin-left: 30px;" placeholder="complemento" name="complemento"></br></br>
            Vencimento: <input type="number"  style="margin-left: 45px;"placeholder="vencimento" name="vencimento"></br></br>
            Situação:</br> Pago: <input type="radio" style="margin-left: 31px;" value="pago" name="pago"></br>
            Pendente: <input type="radio" value="pendente" name="pendente"></br>
         </div>
        <a href="/projetoBD/views/home.ejs"><button class="btn btn-primary btn-lg" type="submit"> Enviar</button></a>
    </form>
</div>
</body>
