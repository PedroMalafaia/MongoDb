<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Banco de dados do condominio</title>
    <link rel="stylesheet" href="css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
</head>
<body id="bodyshow">
    <h3>Codôminos</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Nome</td>
                <td>Sobrenome</td>
                <td>celular</td>
                <td>CPF</td>
                <td>RG</td>
                <td>E-mail</td>
                <td>Complemento</td>
                <td>Vencimento</td>
                <td>Situação</td>
            </tr>
        </thead>
        <tbody>
            <% bancocond.forEach(function(details){ %>
                <tr>
                    <td><%= details.name %></td>
                    <td><%= details.surname %></td>
                    <td><%= details.celular %></td>
                    <td><%= details.cpf %></td>
                    <td><%= details.rg %></td>
                    <td><%= details.email %></td>
                    <td><%= details.complemento %></td>
                    <td><%= details.vencimento %></td>
                    <td><%= details.pago %> <%= details.pendente %></td>
                    <td><a href="/edit/<%= details._id %>">Editar</a> - <a href="/delete/<%= details._id %>">Deletar</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/"> <button  class="btn btn-primary btn-lg" type="submit">Registar</button> </a> 
    <a href="/home"> <button class="btn btn-primary btn-lg" type="submit">voltar</button> </a>
</body>
</html>